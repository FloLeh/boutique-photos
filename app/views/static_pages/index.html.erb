<header>
  <h1>Atomic kitten </h1>
  <span class="perso">
    <% if current_user %>
      <h4><%= current_user.first_name %> <%= current_user.last_name %></h4>
      <%= link_to 'Edit Profile',edit_user_registration_path, class: "btn btn-success" %>
      <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
    <% else %>
      <%= link_to 'Login', new_user_session_path , class: "btn btn-primary"%>
    <% end %>
  </span>
</header>
<center><h2>Voici toutes les photos du moment</h2></center>
<div class="cards">
  <% Item.all.each do |i| %>

    <div class=" mb40 cadre">
        <div class="image-card-title-overlay card-hover">
          <%= link_to "", '#', class: "card-link" %>

            <div class="card-overlay">
                <div class="overlay-inner">
                    <h4><%= i.title %></h4>
                </div>
            </div>
            <%= image_tag 'chat1.jpg', class:"img-fluid" %>

        </div>
        <p class="pt30">
          <%= i.description %>
        </p>
        <p class="btn btn-primary">
          <i class="fa fa-shopping-cart"></i>
          $<%= i.price %>
        </p>
      </div>
    <% end %>
</div>
