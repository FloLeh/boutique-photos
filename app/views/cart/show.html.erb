<%= render 'layouts/header' %>

<div class="page-titles title-dark pt30 pb20 mb70">
            <div class="container">
                <div class="row">
                    <div class=" col-md-6">
                        <h4><span>Votre panier</span></h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="container pb60">
            <h4 class="font300 mb30">
              <%= link_to "Vider le panier", cart_path, class: "btn btn-dark float-right" %>
                Vous avez <%= @cart.items.count %> objets dans votre panier
            </h4>
            <table class="table table-condensed table-responsive cart-table mb40">
                <thead>
                    <tr>
                        <th></th>
                        <th>Produit</th>
                        <th>Prix</th>
                        <th>Quantité</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                  <% @cart.items.each do |i| %>
                    <tr>
                        <td>
                            <%= image_tag i.image_url, width: "50" %>
                        </td>
                        <td class="product-name"><%= i.title %></td>
                        <td class="product-price"><%= i.price %> €</td>
                        <td class="product-quantity">
                            <input type="number" value="1" min="1" class="fl qty-text" name="quantity">
                        </td>
                        <td class="product-total">
                            <%= i.price %> €
                        </td>
                        <td class="product-delete"><a href="#" data-toggle="tooltip" data-placement="top" title="" data-original-title="Remove this item"><i class="fa fa-times"></i></a></td>
                    </tr>
                    <% end %>
                </tbody>
            </table><hr class="mb40">

        <div class="row">
            <div class="col-sm-6">
                <a href="#" class="btn btn-outline-secondary">Continuer le Shopping</a>
            </div>
             <div class="col-sm-6 text-right">
                 <div class="pb20">
                     <h3><small>Prix total du Panier - </small> <%= @cart.items.map{|i| i.price}.sum %> €</h3>
                 </div>
                
            </div>
        </div>
</div>
