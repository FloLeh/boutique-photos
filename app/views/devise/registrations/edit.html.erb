<div class="bg-parallax parallax-overlay accounts-page pt-5"  data-jarallax='{"speed": 0.2}' style='background: url(<%= asset_path "bg1.jpg" %>);'>

  <div class="container" style='height:100%;'>
    <div class="row pb-40">
      <div class="col-lg-4 col-md-6 mr-auto ml-auto col-sm-8">
        <h3 class="text-white text-center mb30">Remplissez le formulaire pour editer votre profil</h3>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.label "Prénom", class: "text-white" %><br />
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
          </div>
          
          <div class="form-group">
            <%= f.label "Nom", class: "text-white" %><br />
            <%= f.text_field :last_name, autocomplete: "last_name", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :email, class: "text-white" %><br />
            <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="form-group">
            <%= f.label "Mot de passe", class: "text-white" %> <i class="text-white">(Laisser libre si non changé)</i><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            <% if @minimum_password_length %>
              <br />
              <em  class = "text-white"><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, class: "text-white" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label "Mot de passe actuel", class: "text-white"%> <i class="text-white">(Obligatoire)</i><br />
            <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
          </div>

          <div class="actions text-center">
            <%= f.submit "Update", class: "btn btn-rounded btn-success mb-2" %>
          </div>
          
          <p class="actions text-center"><%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-rounded btn-danger" %></p>

          <p class="actions text-center"><%= link_to "Retour à l'accueil", :back, class: "btn btn-secondary" %></p>
          
        <% end %>


        







